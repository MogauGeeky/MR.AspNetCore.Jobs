    "projectUrl": "https://github.com/mrahhal/MR.AspNetCore.Jobs",
    "licenseUrl": "https://github.com/mrahhal/MR.AspNetCore.Jobs/blob/master/LICENSE.txt"
  },

  "buildOptions": {
    "embed": [
      "install.sql"
    ]
  },

  "dependencies": {
    "Microsoft.Extensions.Options": "1.0.0",
